<stallionsden>
	 <!-- update the overall backpack size -->
    <set xpath="/windows/window[@name='windowBackpack']/@width">1503</set>
    <set xpath="/windows/window[@name='windowBackpack']/@height">796</set>
    
    <!-- increase the panel size -->
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/@height">753</set>
    
    <!-- adjust the rows, heights, and their cell equivalent -->
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@rows">11</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cols">20</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cell_height">75</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cell_width">75</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/sprite[@name='backgroundMain']/@width">1503</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/sprite[@name='backgroundMain']/@height">796</set>
	
	<!-- adjust windowlooting to match the size of the new player dropped backpack container -->
    <set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@rows">11</set>
    <set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@cols">20</set>

	<remove xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/backpack_item_stack"></remove>
	
	<append xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']">
       <Stallionsbackpack_item_stack name="0"/>
	</append>
</stallionsden>